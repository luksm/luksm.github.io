$title = 'Merriweather', serif
$title_color = #FF9900
$text = 'Montserrat', sans-serif
$text_color = #424242
$background = #E9E9E9
$anchor = #3299BB

$mobile = 800px
$tablet = 1000px

*
  box-sizing border-box


body
  font-family $text
  line-height 150%
  color $text_color
  background-color $background
  font-size 14px

h1, h2, h3, h4, h5, h6, a
  font-family $title
  font-weight 900
  color $title_color
  line-height 1em

h1
  font-size 2em
  line-height 1.5em
  border-bottom 1px solid
  a
    color inherit
    &:hover
      color $anchor
h2
  font-size 1.8em
  line-height 1.3em
h3
  font-size 1.5em
  line-height 1.1em
h4
  font-size 1.1em
h5
  font-size 1.1em
h6
  font-size 1em

blockquote, q
  font-family $title
  position relative
  z-index 2
  padding 2em
  &::before
    content '\201C'
    font-size 5em
    position absolute
    top .5em
    left -.5em
    color rgba($title_color, .5)
    z-index 1

q
  &::before, &::after
    font-size 1em
    position relative
    top 0
    left 0
    color rgba($title_color)
    z-index 1
  &::after
    content '\201D'


dl
  dt
    font-family $title
  dd
    margin-bottom 1em

pre
  overflow scroll
  background $background
  padding .5em

header
  h1, time
    text-align center
    display block
  h1
    border-bottom 1px solid


a
  text-decoration none
  color $anchor
  &:hover
    text-decoration underline


.header
  box-sizing border-box
  position fixed
  top 0
  left 20px
  padding 2em
  @media screen and (max-width: $mobile)
    position relative
    width 100%
    left 0
    padding 0em

.about
  ul
    list-style-type none
    padding-left 0
    @media screen and (max-width: $mobile)
      width 100%
      text-align center
    @media screen and (min-width: $mobile) and (max-width: $tablet)
       padding 0em

.main
  padding 20px
  @media screen and (max-width: $mobile)
    max-width 400px
  @media screen and (max-width: $tablet)
    max-width 500px
  max-width 600px
  width 100%
  margin 0 auto
  background white
  article::after
    content ""
    display block
    width 70%
    background $title_color
    height 1px
    margin 0 auto

.paginator
  margin-top 1em
  display block
  &-number
    text-align center
    display block
  &-link
    &_previous
      float left
    &_next
      float right

label
  display block
  line-height 40px

input, textarea
  line-height 40px
  width 100%
  border 1px solid $background
  padding 0 2%
